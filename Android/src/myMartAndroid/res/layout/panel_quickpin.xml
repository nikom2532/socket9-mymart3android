<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        
        <View
		    android:id="@+id/myRectangleView"
		    android:layout_width="400dp"
		    android:layout_height="100dp"
		    android:background="@drawable/rectangle"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:paddingTop="10dp"
                android:src="@android:drawable/alert_light_frame" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:paddingTop="10dp"
                android:src="@android:drawable/alert_light_frame" />
            
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:paddingTop="10dp"
                android:src="@android:drawable/alert_light_frame" />
            
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:paddingTop="10dp"
                android:src="@android:drawable/alert_light_frame" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"  >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="X"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="X"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="X"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="X"
                android:textAppearance="?android:attr/textAppearanceMedium" />
 
        </LinearLayout>

        

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/idButton1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="1" />

        <Button
            android:id="@+id/idButton2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="2" />

        <Button
            android:id="@+id/idButton3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/idButton4"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="4" />

        <Button
            android:id="@+id/idButton5"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="5" />

        <Button
            android:id="@+id/idButton6"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="6" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/idButton7"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="7" />

        <Button
            android:id="@+id/idButton8"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="8" />

        <Button
            android:id="@+id/idButton9"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="9" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >
        
        <Button
            android:id="@+id/buttonEnterPinNone"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="" />

        <Button
            android:id="@+id/idButton0"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="0" />

        <Button
            android:id="@+id/idButtonDel"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:text="delete" />
        
    </LinearLayout>

</LinearLayout>
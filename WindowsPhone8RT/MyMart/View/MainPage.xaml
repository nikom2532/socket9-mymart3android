<Page
    x:Class="MyMart.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyMart.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="layoutRoot">
        <Grid.Background>
            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0.00,0.5">
                <GradientStop Color="#FFC98622"/>
                <GradientStop Color="#FF4A4741" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Image Source="Assets/fairpoint_logo.png"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Margin="0 0 50 50"
               Width="350"
               Height="205"
               Opacity="0.7"/>
    </Grid>
</Page>